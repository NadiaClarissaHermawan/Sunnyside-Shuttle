<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="20sp">

    <TextView
        android:id="@+id/tv_landing_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/tv_login_title"
        android:textColor="@color/orange"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_pesan_fragment"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/logo_landing_page"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        android:layout_below="@+id/tv_landing_page"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_slogan"
        android:layout_below="@+id/logo_landing_page"
        android:layout_centerHorizontal="true"
        android:textColor="@color/orange"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_informasi"
        android:text="@string/tv_informasi"
        android:layout_below="@id/tv_slogan"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/margin_pesan_fragment"
        android:paddingLeft="30sp"
        android:paddingRight="30dp"/>

    <!--  Button Pesan Sekarang  -->
    <Button
        android:id="@+id/btn_pesan_sekarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_pesan_sekarang"
        android:textSize="16sp"
        android:ems="10"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:background="@drawable/buttonn_bg"
        android:layout_below="@id/tv_informasi"
        android:layout_marginTop="50sp"
        android:layout_centerInParent="true"
        />

</RelativeLayout>