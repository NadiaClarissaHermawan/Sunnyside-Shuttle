<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android ="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:paddingBottom="30dp"
        tools:context=".MainActivity">

        <!--lottie shuttle JSON animation-->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_succeed"
            android:layout_width="500dp"
            android:layout_height="500dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.74"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/main_payment_succeed"></com.airbnb.lottie.LottieAnimationView>

        <!--return to home page btn-->
        <Button
            android:id="@+id/back_to_home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/orange_btn"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/back_to_home"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".99"
            fontPath="fonts/RobotoBold.ttf"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>